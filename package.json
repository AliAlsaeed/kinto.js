{
  "name": "cliquetis",
  "version": "0.0.1",
  "description": "JavaScript client for Cliquet.",
  "main": "index.js",
  "scripts": {
    "dist": "browserify -t [ babelify --sourceMapRelative . ] -e src/index.js -o dist/cliquetis.js",
    "watch": "watchify -d -t [ babelify --sourceMapRelative . ] -e src/index.js -o dist/cliquetis.js -v",
    "test": "mocha --compilers js:babel/register test/*_test.js",
    "tdd": "mocha -w --compilers js:babel/register test/*_test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-services/cliquetis.git"
  },
  "keywords": [
    "sync",
    "api",
    "rest",
    "cliquet"
  ],
  "author": "Nicolas Perriault <nperriault@mozilla.com>",
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/mozilla-services/cliquetis/issues"
  },
  "homepage": "https://github.com/mozilla-services/cliquetis",
  "devDependencies": {
    "babel": "^5.4.4",
    "babelify": "^6.1.1",
    "browserify": "^10.2.1",
    "chai": "^2.3.0",
    "chai-as-promised": "^5.0.0",
    "fake-indexeddb": "^1.0.3",
    "mocha": "^2.2.5",
    "sinon": "^1.14.1",
    "uuid": "^2.0.1",
    "watchify": "^3.2.1"
  }
}
